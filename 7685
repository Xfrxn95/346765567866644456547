local T_NAME = "54b3b10efc668b8054b210e563c00f41c67160da77a903ea2a16c3276824be7a"
local R_URL = "rbxthumb://type=Asset&id=134906414231445&w=420&h=420"
local C_GUI = game:GetService("CoreGui")

local CONNECTION = nil

local function fixButton(instance)
    if instance:IsA("ImageButton") and instance.Name == "ImageButton" and 
       instance.Parent and instance.Parent.Name == "ScreenGui" and 
       instance.Parent.Parent and instance.Parent.Parent.Name == T_NAME then
        instance.Image = R_URL
        instance.ImageTransparency = 0
        instance.BackgroundTransparency = 1         
        if CONNECTION then
            CONNECTION:Disconnect()
            CONNECTION = nil
        end
    end
end

local container = C_GUI:WaitForChild(T_NAME, 30)
if not container then return end

CONNECTION = container.DescendantAdded:Connect(fixButton)

for _, descendant in ipairs(container:GetDescendants()) do
    fixButton(descendant)
end

if CONNECTION and CONNECTION.Connected then
    task.wait(1)
    for _, descendant in ipairs(container:GetDescendants()) do
        fixButton(descendant)
    end
end

