local id = nil

-- Lista de funciones posibles para obtener ClientID en cualquier ejecutor
local possible = {
    function() return Delta and Delta.get_client_id and Delta.get_client_id() end,
    function() return Fluxus and Fluxus.ClientID end,
    function() return AWP and AWP.GetClientId and AWP:GetClientId() end,
    function() return getclientid and getclientid() end,
    function() return get_client_id and get_client_id() end,
    function() return identifyexecutor and identifyexecutor() end,
    function() return syn and syn.get_synapse_id and syn.get_synapse_id() end,
    function() return Krnl and Krnl.ClientIdentifier end,
    function() return executor and executor.getid and executor.getid() end,
}

-- Intentar obtener el Client ID
for _, fn in ipairs(possible) do
    local ok, result = pcall(fn)
    if ok and result then
        id = result
        break
    end
end

-- Resultado final
if id then
    print("‚úî Tu Client ID es: " .. tostring(id))

    -- Copiar al portapapeles
    if setclipboard then
        setclipboard(tostring(id))
        print("üìã Se copi√≥ a tu portapapeles autom√°ticamente.")
    else
        warn("‚ö† Tu ejecutor no soporta setclipboard().")
    end
else
    warn("‚ùå No se pudo detectar tu Client ID autom√°ticamente.")
end
