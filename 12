local Library = loadstring(game:HttpGetAsync("https://github.com/ActualMasterOogway/Fluent-Renewed/releases/latest/download/Fluent.luau"))()
local SaveManager = loadstring(game:HttpGetAsync("https://raw.githubusercontent.com/ActualMasterOogway/Fluent-Renewed/master/Addons/SaveManager.luau"))()
local InterfaceManager = loadstring(game:HttpGetAsync("https://raw.githubusercontent.com/ActualMasterOogway/Fluent-Renewed/master/Addons/InterfaceManager.luau"))()
 
local Window = Library:CreateWindow{
    Title = `Satan Crew / SC On Top`,
    SubTitle = "Build a boat version",
    TabWidth = 160,
    Size = UDim2.fromOffset(830, 525),
    Resize = true, 
    MinSize = Vector2.new(470, 380),
    Acrylic = true, 
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.RightControl -- Used when theres no MinimizeKeybind
}

local Tabs = {
    Main = Window:CreateTab{
        Title = "Main",
        Icon = "user"
    },
    Farm = Window:CreateTab{
        Title = "Farm",
        Icon = "leaf"
    },
    Chests = Window:CreateTab{
        Title = "Chests",
        Icon = "box"
    },
    Misc = Window:CreateTab{
        Title = "Miscellaneous",
        Icon = "list"
    },
    Teleport = Window:CreateTab{
        Title = "Teleport",
        Icon = "map"
    },
    Settings = Window:CreateTab{
        Title = "Settings",
        Icon = "settings"
    }
}

local Options = Library.Options

Library:Notify{
    Title = "Welcome",
    Content = "Join SC for more scripts",
    SubContent = "SC On Top", 
    Duration = 5 
}

local Welcome = Tabs.Main:CreateParagraph("Paragraph", {
    Title = "Welcome to satan crew",
    Content = "Build A Boat For Teasure Script"
})

local Credits = Tabs.Main:CreateParagraph("Paragraph", {
    Title = "Credits",
    Content = "Script Created By Sherya (Isabella)"
})

local Credits = Tabs.Main:CreateParagraph("Paragraph", {
    Title = "Instructions",
    Content = "Enter the farm to farm"
    Content = "Adjust whatever you want in the script."
    Content = "And enjoy!!!!"
})

Tabs.Main:CreateButton{
    Title = "Discord",
    Description = "Join our Discord server to receive updates.",
    Callback = function()
        local discordLink = "https://discord.gg/5VZsWs3NTv"

        if setclipboard then
            setclipboard(discordLink)
        elseif toclipboard then
            toclipboard(discordLink)
        end

        Window:Dialog{
            Title = "Discord",
            Content = "El link del Discord fue copiado al portapapeles",
            Buttons = {
                {
                    Title = "OK",
                    Callback = function() end
                }
            }
        }
    end
}


