MiscTab:AddSeperator({
    Title = "Player"
})

local Players = game:GetService("Players")
local player = Players.LocalPlayer

local speedValue = 16
local autoSpeedEnabled = false
local autoSpeedConnection

local function applySpeed(character)
    local humanoid = character:WaitForChild("Humanoid", 5)
    if humanoid then
        humanoid.WalkSpeed = speedValue
    end
end

autoSpeedConnection = player.CharacterAdded:Connect(function(character)
    if autoSpeedEnabled then
        applySpeed(character)
    end
end)

MiscTab:AddSlider({
    Title = "Walk Speed",
    Content = "Player speed",
    Min = 0,
    Max = 100,
    Increment = 1,
    Default = 16,
    Callback = function(value)
        speedValue = value
        if autoSpeedEnabled and player.Character then
            applySpeed(player.Character)
        end
    end
})

MiscTab:AddToggle({
    Title = "Auto Set Speed",
    Content = "Keep speed after death",
    Default = false,
    Callback = function(value)
        autoSpeedEnabled = value

        if value and player.Character then
            applySpeed(player.Character)
        end
    end
})

local Players = game:GetService("Players")
local player = Players.LocalPlayer

local jumpValue = 50
local autoJumpEnabled = false

local function applyJump(character)
    local humanoid = character:WaitForChild("Humanoid", 5)
    if humanoid then
        humanoid.UseJumpPower = true
        humanoid.JumpPower = jumpValue
    end
end

player.CharacterAdded:Connect(function(character)
    if autoJumpEnabled then
        applyJump(character)
    end
end)

MiscTab:AddSlider({
    Title = "Jump Power",
    Content = "Jump higher / faster",
    Min = 0,
    Max = 200,
    Increment = 5,
    Default = 50,
    Callback = function(value)
        jumpValue = value
        if autoJumpEnabled and player.Character then
            applyJump(player.Character)
        end
    end
})

MiscTab:AddToggle({
    Title = "Auto Jump Power",
    Content = "Keep jump power after death",
    Default = false,
    Callback = function(value)
        autoJumpEnabled = value
        if value and player.Character then
            applyJump(player.Character)
        end
    end
})

