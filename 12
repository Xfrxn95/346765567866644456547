local FarmTab = Window:CreateTab({
    Name = "Farm",
    Icon = "rbxassetid://10709752035" -- lucide-activity (farm / auto)
})

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local LocalPlayer = Players.LocalPlayer

local AutoFarm = false

FarmTab:AddToggle({
    Title = "Auto Farm",
    Content = "Automatically farm stages and claim gold",
    Default = false,
    Callback = function(state)
        AutoFarm = state

        if state then
            task.spawn(function()
                local Stages = workspace:WaitForChild("BoatStages"):WaitForChild("NormalStages")
                local ClaimGold = workspace:WaitForChild("ClaimRiverResultsGold")

                while AutoFarm do
                    local character = LocalPlayer.Character
                    local hrp = character and character:FindFirstChild("HumanoidRootPart")
                    if not hrp then
                        RunService.Heartbeat:Wait()
                        continue
                    end

                    -- Anti-physics
                    local bv = Instance.new("BodyVelocity")
                    bv.Velocity = Vector3.zero
                    bv.MaxForce = Vector3.new(1e9, 1e9, 1e9)
                    bv.Parent = hrp

                    for i = 1, 9 do
                        if not AutoFarm then break end

                        local stage = Stages:FindFirstChild("CaveStage" .. i)
                        if stage and stage:FindFirstChild("DarknessPart") then
                            hrp.CFrame = stage.DarknessPart.CFrame
                            RunService.Heartbeat:Wait()
                            task.wait(i == 1 and 6 or 3)
                            ClaimGold:FireServer()
                        end
                    end

                    -- Reset character
                    if AutoFarm and LocalPlayer.Character then
                        LocalPlayer.Character:BreakJoints()
                        repeat RunService.Heartbeat:Wait()
                        until LocalPlayer.Character ~= character or not AutoFarm
                    end

                    if bv then
                        bv:Destroy()
                    end
                end
            end)
        end
    end
})

FarmTab:AddSeperator({
    Title = "Calculator"
})

local Wins = 0
local Gold = 0
local Time = 0 
local Farming = false 

local StatsParagraph = FarmTab:AddParagraph({
    Title = "Farm Stats",
    Content =
        "Wins: 0\n" ..
        "Gold: 0\n" ..
        "Time: 00:00:00\n\n" ..
        "Gold / Hour: 0\n" ..
        "12 Hours: 0\n" ..
        "24 Hours: 0"
})

local function formatTime(sec)
    local h = math.floor(sec / 3600)
    local m = math.floor((sec % 3600) / 60)
    local s = sec % 60
    return string.format("%02d:%02d:%02d", h, m, s)
end

local function calculateGoldRates()
    if Time <= 0 then
        return 0, 0, 0
    end

    local goldPerHour = math.floor((Gold / Time) * 3600)
    return goldPerHour, goldPerHour * 12, goldPerHour * 24
end

local function UpdateStats()
    local gph, g12, g24 = calculateGoldRates()

    StatsParagraph:Set(
        "Wins: " .. Wins ..
        "\nGold: " .. Gold ..
        "\nTime: " .. formatTime(Time) ..
        "\n\nGold / Hour: " .. gph ..
        "\n12 Hours: " .. g12 ..
        "\n24 Hours: " .. g24
    )
end

task.spawn(function()
    while true do
        if Farming then
            Time += 1
            UpdateStats()
        end
        task.wait(1)
    end
end)

FarmTab:AddSeperator({
    Title = "Auto Chests"
})

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local LocalPlayer = Players.LocalPlayer

local AutoCommonChest = false
local AutoUncommonChest = false
local AutoRareChest = false
local AutoEpicChest = false
local AutoLegendaryChest = false
local AutoWinterChest = false

local function startAutoChest(toggleGetter, chestName, amountFunc)
    task.spawn(function()
        while toggleGetter() do
            local amount = amountFunc and amountFunc() or 1
            workspace.ItemBoughtFromShop:InvokeServer(chestName, amount)
            task.wait() 
        end
    end)
end

FarmTab:AddToggle({
    Title = "Auto Common Chest",
    Content = "Automatically open Common Chests",
    Default = false,
    Callback = function(value)
        AutoCommonChest = value
        if value then
            startAutoChest(function() return AutoCommonChest end, "Common Chest")
        end
    end
})

