-- // Load Fluent Renewed
local Library = loadstring(game:HttpGetAsync(
    "https://github.com/ActualMasterOogway/Fluent-Renewed/releases/latest/download/Fluent.luau"
))()

local SaveManager = loadstring(game:HttpGetAsync(
    "https://raw.githubusercontent.com/ActualMasterOogway/Fluent-Renewed/master/Addons/SaveManager.luau"
))()

local InterfaceManager = loadstring(game:HttpGetAsync(
    "https://raw.githubusercontent.com/ActualMasterOogway/Fluent-Renewed/master/Addons/InterfaceManager.luau"
))()

-- // Window
local Window = Library:CreateWindow{
    Title = "Satan Crew / SC On Top",
    SubTitle = "Build a Boat version",
    TabWidth = 160,
    Size = UDim2.fromOffset(830, 525),
    Resize = true,
    MinSize = Vector2.new(470, 380),
    Acrylic = true,
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.RightControl
}

-- // Tabs
local Tabs = {
    Main = Window:CreateTab{
        Title = "Main",
        Icon = "user-round"
    },
    Farm = Window:CreateTab{
        Title = "Farm",
        Icon = "leaf"
    },
    Settings = Window:CreateTab{
        Title = "Settings",
        Icon = "settings"
    }
}

-- // Notify
Library:Notify{
    Title = "Welcome",
    Content = "Join SC for more scripts",
    SubContent = "SC On Top",
    Duration = 5
}

-- // MAIN TAB CONTENT
Tabs.Main:CreateParagraph({
    Title = "Welcome to Satan Crew",
    Content = "Build A Boat For Treasure Script"
})

Tabs.Main:CreateParagraph({
    Title = "Credits",
    Content = "Script created by Sherya (Isabella)"
})

Tabs.Main:CreateParagraph({
    Title = "Instructions",
    Content = "Enter the farm to farm\nAdjust whatever you want\nAnd enjoy!"
})

Tabs.Main:CreateButton{
    Title = "Discord",
    Description = "Copy Discord invite to clipboard",
    Callback = function()
        local link = "https://discord.gg/5VZsWs3NTv"

        if setclipboard then
            setclipboard(link)
        elseif toclipboard then
            toclipboard(link)
        end

        Window:Dialog{
            Title = "Discord",
            Content = "Discord link copied to clipboard!",
            Buttons = {
                { Title = "OK" }
            }
        }
    end
}

-- // SETTINGS TAB (Save + Interface)
SaveManager:SetLibrary(Library)
InterfaceManager:SetLibrary(Library)

-- Do not save themes in configs
SaveManager:IgnoreThemeSettings()

-- Folders
InterfaceManager:SetFolder("FluentScriptHub")
SaveManager:SetFolder("FluentScriptHub/BuildABoat")

-- Build UI
InterfaceManager:BuildInterfaceSection(Tabs.Settings)
SaveManager:BuildConfigSection(Tabs.Settings)

-- // Final
Window:SelectTab(1)

Library:Notify{
    Title = "Ready",
    Content = "UI loaded successfully",
    Duration = 4
}

-- Auto-load config if exists
SaveManager:LoadAutoloadConfig()
